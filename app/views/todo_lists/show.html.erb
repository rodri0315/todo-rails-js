<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
      <p id="notice"><%= notice %></p>
      <div class="card mt-5">
        <div class="card-header d-flex justify-content-between">
          <div class="">
            <h5 class="m0">
              <strong>Title:</strong>
              <%= @todo_list.title %>
              <span class="badge badge-<%= @todo_list.badge_color  %>"><%= @todo_list.status %></span>
            </h5>
            <p class="text-secondary m0">
              <%= @todo_list.percent_complete %> complete 
              (<%= @todo_list.completed_items %>/<%= @todo_list.total_items %> Todo Items)
            </p>
          </div>
          <div>
            <%= link_to 'Edit', edit_todo_list_path(@todo_list), class: 'btn btn-secondary' %>
          </div>
        </div>
        <div class="card-body">
          <div class="progress mb-4">
            <div class="progress-bar bg-info" role="progressbar" 
            style="width: 25%" aria-valuenow="<%= @todo_list.percent_complete %>" 
            aria-valuemin="0" aria-valuemax="100">
            </div>
          </div>
          <%= form_for([@todo_list, @todo_item]) do |f| %>
            <div class="input-group mb-4">
              <%= f.text_field :description, class: "form-control", placeholder: "Add todo item" %>
              <div class="input-group-append">
                <%= f.submit "Add", class: "btn btn-primary input-group-btn" %>
              </div>
            </div>
          <% end %>
          <ul class="list-group">
            <% @todo_list.todo_items.each do |todo_item| %>
              <% if todo_item.completed? %>
                <li class="list-group-item bg-light">
                  <div class="d-flex justify-content-between">
                    <span class="text-muted">
                      <%= todo_item.description %>
                    </span>
                    <%= link_to '#', class: 'btn btn-dark' do %>
                      <%= fa_icon('times') %>
                    <% end %>
                  </div>
                </li>
              <% else %>
                <li class="list-group-item">
                  <div class="d-flex justify-content-between">
                    <span>
                      <%= todo_item.description %>
                    </span>
                    <%= link_to '#', class: 'btn btn-info' do %>
                      <%= fa_icon('check') %>
                    <% end %>
                  </div>
                </li>
              <% end%>
            <% end%>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
