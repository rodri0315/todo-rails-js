<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
      <p id="notice"><%= notice %></p>
      <div class="card mt-5">
        <div class="card-header d-flex justify-content-between">
          <h5 class="m0 text-dark">
            Todo Lists
          </h5>
          <%= link_to 'New Todo List', new_todo_list_path, class: 'btn btn-primary btn-sm' %>
        </div>
        <div class="card-body">
          <ul class="list-group">
            <% @todo_lists.each do |todo_list| %>
            <%= link_to todo_list, class: "text-decoration-none" do %>
            <li class="list-group-item d-flex justify-content-between">
              <div>
                <h6 class="m0 text-dark">
                  <b><%= todo_list.title %></b>
                  <span class="badge badge-<%= todo_list.badge_color  %>"><%= todo_list.status %></span>
                </h6>
                <p class="text-secondary m0">
                  <%= todo_list.percent_complete %> complete
                  (<%= todo_list.completed_items %>/<%= todo_list.total_items %> Todo Items)
                </p>
              </div>
            </li>
            <%end%>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>